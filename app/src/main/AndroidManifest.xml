<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.finalcemeteryproject">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />



    <application
        android:name=".CemeteryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Final cemetery project"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.CreateGraveActivity"
            android:label="Create Grave Activity"/>
        <activity android:name=".activities.CreateCemeteryActivity"
            android:label="Create Cemetery Activity"/>
        <activity android:name=".activities.GraveDetailActivity"
            android:label="Grave Detail Activity"/>
        <activity android:name=".activities.CemeteryListActivity"
            android:label="Cemetery List Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.CemeteryDetailActivity"
            android:label="Cemetery Detail activity"/>

    </application>

</manifest>